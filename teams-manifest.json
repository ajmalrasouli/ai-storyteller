{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
  "manifestVersion": "1.16",
  "version": "1.0.0",
  "id": "${{TEAMS_APP_ID}}",
  "packageName": "com.storyteller.bot",
  "developer": {
    "name": "Storyteller Bot",
    "websiteUrl": "${{WEBSITE_URL}}",
    "privacyUrl": "${{WEBSITE_URL}}/privacy",
    "termsOfUseUrl": "${{WEBSITE_URL}}/terms"
  },
  "name": {
    "short": "Storyteller",
    "full": "AI Storyteller Bot"
  },
  "description": {
    "short": "Generate creative stories with AI",
    "full": "Create engaging children's stories using AI. Just type /storyteller prompt: [Your Prompt] to get started!"
  },
  "icons": {
    "outline": "outline.png",
    "color": "color.png"
  },
  "accentColor": "#7c3aed",
  "bots": [
    {
      "botId": "${{BOT_ID}}",
      "scopes": [
        "personal",
        "team",
        "groupchat"
      ],
      "commandLists": [
        {
          "scopes": [
            "personal",
            "team",
            "groupchat"
          ],
          "commands": [
            {
              "title": "storyteller",
              "description": "Generate a story based on your prompt"
            }
          ]
        }
      ],
      "supportsFiles": false,
      "isNotificationOnly": false
    }
  ],
  "composeExtensions": [
    {
      "botId": "${{BOT_ID}}",
      "commands": [
        {
          "id": "generateStory",
          "description": "Generate a story based on your prompt",
          "title": "Generate Story",
          "type": "action",
          "context": ["compose", "commandBox"],
          "parameters": [
            {
              "name": "prompt",
              "title": "Story Prompt",
              "description": "Enter your story prompt",
              "inputType": "text"
            }
          ]
        }
      ]
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "${{WEBSITE_URL}}"
  ]
} 